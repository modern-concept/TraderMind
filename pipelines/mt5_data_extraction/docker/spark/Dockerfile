FROM openjdk:11

# üß∞ Instala√ß√µes b√°sicas
RUN apt-get update && \
    apt-get install -y wget curl python3 python3-pip && \
    apt-get clean

# üî• Vari√°veis do Spark
ENV SPARK_VERSION=3.5.1
ENV HADOOP_VERSION=3

# üì¶ Instala√ß√£o do Spark
RUN wget --timeout=120 --tries=3 https://archive.apache.org/dist/spark/spark-${SPARK_VERSION}/spark-${SPARK_VERSION}-bin-hadoop${HADOOP_VERSION}.tgz && \
    tar xvf spark-${SPARK_VERSION}-bin-hadoop${HADOOP_VERSION}.tgz && \
    mv spark-${SPARK_VERSION}-bin-hadoop${HADOOP_VERSION} /opt/spark && \
    rm spark-${SPARK_VERSION}-bin-hadoop${HADOOP_VERSION}.tgz

ENV SPARK_HOME=/opt/spark
ENV PATH=$SPARK_HOME/bin:$PATH
ENV JAVA_HOME=/usr/local/openjdk-11
ENV PATH=$JAVA_HOME/bin:$PATH
ENV PYSPARK_PYTHON=python3
ENV PYSPARK_DRIVER_PYTHON=python3


# üêç Instala√ß√£o de depend√™ncias Python com controle de timeout
COPY requirements.txt .
RUN pip install --default-timeout=100 --no-cache-dir -r requirements.txt
RUN pip install -r requirements.txt

# üöß Diret√≥rio de trabalho
WORKDIR /app

# üìÅ Copia os scripts para o cont√™iner (ajuste o caminho conforme seu contexto de build)
COPY scripts /app/scripts

RUN python3 --version && java -version